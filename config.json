{
  "name": "Geomarker",

  "namespace": "UIOWA\\Geomarker",

  "description": "Generates a Google map with marker and info window using geolocation data from specified fields in a REDCap project",

  "framework-version": 14,
  "compatibility": {
    "php-version-min": "",
    "php-version-max": "",
    "redcap-version-min": "13.7.3",
    "redcap-version-max": ""
  },

  "versions": {
    "1.0.7": "Updated EM framework version to 14 and REDCap minimum version to 13.7.3"
  },

  "documentation": "README.md",

  "authors": [
    {
      "name": "Joe Spring",
      "email": "redcap@icts.uiowa.edu",
      "institution": "University of Iowa Institute for Clinical and Translational Science"
    },
    {
      "name": "Heath Davis",
      "email": "redcap@icts.uiowa.edu",
      "institution": "University of Iowa Institute for Clinical and Translational Science"
    },
    {
      "name": "Chris Ortman",
      "email": "redcap@icts.uiowa.edu",
      "institution": "University of Iowa Institute for Clinical and Translational Science"
    }
  ],

  "links": {
    "project": [
      {
        "name": "Geomarker Map",
        "icon": "pin",
        "url": "index.php"
      }
    ]
  },

  "project-settings": [
    {
      "key": "google-maps-api-key",
      "name": "Google Maps v3 API Key",
      "type": "text",
      "required": true
    },
    {
      "key": "lat-field",
      "name": "Latitude Field",
      "type": "field-list",
      "required": true
    },
    {
      "key": "lng-field",
      "name": "Longitude Field",
      "type": "field-list",
      "required": true
    },
    {
      "key": "map-type",
      "name": "Type of Map",
      "type": "radio",
      "choices": [
        {
          "name": "Roadmap",
          "value": "roadmap"
        },
        {
          "name": "Satellite",
          "value": "satellite"
        },
        {
          "name": "Hybrid (Satellite + Roads)",
          "value": "hybrid"
        },
        {
          "name": "Terrain",
          "value": "terrain"
        }
      ],
      "required": true,
      "default": "roadmap"
    },
    {
      "key": "hover-field",
      "name": "Hover Text Field",
      "type": "field-list",
      "required": false
    }
  ]
}
